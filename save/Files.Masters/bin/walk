#!/bin/ash
# Modified slightly from https://askubuntu.com/questions/962170/explaining-a-shell-script-to-recursively-print-full-directory-tree
walk() {
   local indent="${2:-0}"
      printf "%*s%s\n" $indent '' "$1"

      for entry in "$1"/*; do
         [[ -d "$entry" ]] && walk "$entry" $((indent+4))
      done
}

walk "$1"
